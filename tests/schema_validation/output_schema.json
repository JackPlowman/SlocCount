{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "total": {
      "type": "object",
      "properties": {
        "lines": {
          "type": "integer",
          "minimum": 0
        },
        "files": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["lines", "files"],
      "additionalProperties": false
    },
    "repositories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "summary": {
            "type": "object",
            "properties": {
              "total_line_count": {
                "type": "integer",
                "minimum": 0
              },
              "total_file_count": {
                "type": "integer",
                "minimum": 0
              }
            },
            "required": ["total_line_count", "total_file_count"],
            "additionalProperties": false
          },
          "commits": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "pattern": "^[a-f0-9]{40}$"
                },
                "date": {
                  "type": "string",
                  "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
                },
                "total_files": {
                  "type": "integer",
                  "minimum": 0
                },
                "total_lines": {
                  "type": "integer",
                  "minimum": 0
                }
              },
              "required": ["id", "date", "total_files", "total_lines"],
              "additionalProperties": false
            }
          }
        },
        "required": ["name", "summary", "commits"],
        "additionalProperties": false
      }
    }
  },
  "required": ["total", "repositories"],
  "additionalProperties": false
}
